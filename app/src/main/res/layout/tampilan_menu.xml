<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"

    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageHospital"
            android:layout_width="match_parent"
            android:layout_height="512px"
            android:layout_weight="1"
            android:onClick="clickHospital"
            app:srcCompat="@drawable/hospital" />

        <ImageView
            android:id="@+id/imagePolice"
            android:layout_width="match_parent"
            android:layout_height="512px"
            android:layout_weight="1"
            app:srcCompat="@drawable/police" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageSupermarket"
            android:layout_width="match_parent"
            android:layout_height="512px"
            android:layout_weight="1"
            app:srcCompat="@drawable/supermarket" />

        <ImageView
            android:id="@+id/imageSchool"
            android:layout_width="match_parent"
            android:layout_height="512px"
            android:layout_weight="1"
            app:srcCompat="@drawable/school" />

    </TableRow>

</LinearLayout>